@model IEnumerable<MvcMusicDistr.Models.Distribution>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" type="text/css" href="~/css/Scara312.css" />

<h1>Index</h1>

<div>
    @*<p>Начало периода: </p>
    <p>Конец Периода: </p>*@
</div>

<form class="btn" asp-controller="Distributions" asp-action="Xml">
    <button value="/distributions/xml" id="doll5" formtarget="_blank">
        Создать XML по таблице
    </button>
</form>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Performer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Performer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
             
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

